<ol class="statuses" id="timeline">
  <%= render :partial=>'statuses/tweet', :collection=>@tweets, :locals=>{:type=>'friends'} %>
</ol>

<% unless @page.nil? %>
<div class="bottom-nav">
  <div id="pagination" class="pagination">
    <% if @more_pages %>
      <%= link_to 'Older Â»', current_path.merge(:page => @page + 1), :class => 'section_links', :rel => 'prev' %>
    <% end %>
    <% if @page > 1 %>
      <%= link_to 'Â« Newer', current_path.merge(:page => @page - 1), :class => 'section_links', :rel => 'prev' %>
    <% end %>
  </div>
</div>
<% end %>

<% content_for :javascript do %>
  $('span.reply a').click(function() {
    var status = $(this).parents('li.status');
    var name = '@' + status.data('username');
    $('input#in_reply_to_status_id').val(status.data('status-id'));

    if (!$('textarea#status').val().match(name)) {
      $('textarea#status').val(name + ' ' + $('textarea#status').val());
    }
    $('textarea#status').focus();

    return false;
  });
<% end %>
