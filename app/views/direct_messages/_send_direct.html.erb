<form action="/direct_messages/create" id="doingForm" class="status-update-form" method="post">
    <div style="margin:0;padding:0">
        <input name="authenticity_token" type="hidden" value="42114f58c6f3824dc51197223d6e1fb9b1d184a7"/></div>
    <fieldset class="common-form standard-form">
        <div class="bar">
            <h3>
                <label for="doing">

                    Send <select id="direct_message_user_id" name="user[id]">
                    <option value="" selected="selected"></option>
                    <% current_user.friends.each do |user| %>
                        <option value="<%= user.id %>"><%= h user.username %></option>
                    <% end %>
                </select> a direct message.

                </label>
            </h3>
      <span id="chars_left_notice" class="numeric">
        <strong id="status-field-char-counter" class="char-counter"></strong>

      </span>
        </div>
        <div class="info">
            <textarea cols="15" id="text" name="text" rows="3"></textarea>
        </div>
        <div class="status-btn">
            <input type="submit" name="update" value="send" id="update-submit" class="round-btn dm-btn"/>
            <input id="direct_message_screen_name" name="screen_name" type="hidden"/>

            <input id="tab_action" name="tab" type="hidden" value="index"/>
        </div>
    </fieldset>
</form>
<% content_for :javascript do %>
    $('#doingForm').isDirectMessageForm();
<% end %>
